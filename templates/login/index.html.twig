{% extends 'base.html.twig' %}

{% block title %}LoginController{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/plugins/bootstrap/css/bootstrap.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('assets/css/style.min.css') }}"/>
    <link rel="icon" href="{{ asset('favicon.ico') }}" type="image/x-icon"/>
{% endblock %}


{% block body %}
<body class="font-muli theme-cyan gradient">
    <div class="auth option2">
        <div class="auth_left">
            <div class="card">
                <div class="card-body">
                    <div class="text-center">
                        <a class="header-brand" href=><i class="fa fa-graduation-cap brand-logo"></i></a>
                        <div class="card-title mt-3">Login to your account</div>
                    </div>
                    {{ form_start(form) }}
                        <div class="form-group">
                        {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter email'}}) }}
                        </div>

                        <div class="form-group">
                        {{ form_row(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                        </div>

                 
                        <div class="text-center">
                        {{ form_row(form.Connecter, {'attr': {'class': 'btn btn-primary btn-block'}}) }}
                        </div>

                    {{ form_end(form) }}

                </div>
            </div>        
        </div>
    </div>
</body>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/bundles/lib.vendor.bundle.js') }}"></script>
    <script src="{{ asset('assets/js/core.js') }}"></script>
{% endblock %}
